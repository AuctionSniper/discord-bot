{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["build", "node_modules"]
}